package fr.eni.tp.annuaire;

public class Personne {
	private String nom;

	public Personne(String nom) {
		super();
		this.nom = nom;
	}

	public Personne() {
	}

	public String getNom() {
		return nom;
	}

	public void setNom(String nom) {
		this.nom = nom;
	}

	public void modifierPersonne(String nouveauNom) {
		System.out.println("Merci de saisir le nom de la personne Ã  modifier :");
		setNom(nouveauNom);
	}

	@Override
	public String toString() {
		return "[nom=" + nom + "]";
	}

}
